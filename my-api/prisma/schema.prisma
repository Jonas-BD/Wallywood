generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id Int @id @default(autoincrement())
  firstname String
  lastname String
  email String @unique
  password String
  role Role
  isActive Boolean
  createdAt DateTime @default(now())
  cartlines cartLines[]
  userRatings userRatings[]

  @@map("user")
}

model cartLines {
  id Int @id @default(autoincrement())
  userId Int
  posterId Int
  quantity Int
  createdAt DateTime @default(now())
  poster Posters @relation(fields: [posterId], references: [id])
  user User @relation(fields: [userId], references: [id])

  @@map("cartlines")
}

model Posters {
  id Int @id @default(autoincrement())
  name String
  slug String
  description String
  image String
  width Int
  height Int
  price Float
  stock Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  cartlines cartLines[]
  userratings userRatings[]
  genrePosterRels GenrePosterRel[]

  @@map("posters")
}

model userRatings {
  id Int @id @default(autoincrement())
  userId Int
  user User @relation(fields: [userId], references: [id])
  posterId Int
  poster Posters @relation(fields: [posterId], references: [id])
  numStars Int
  createdAt DateTime @default(now())
  
  @@map("userratings")
}

model Genre {
  id Int @id @default(autoincrement())
  genrePosterRels GenrePosterRel[]
  title String
  slug String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("genre")
}

model GenrePosterRel {
  genreId Int
  poster Posters @relation(fields: [posterId], references: [id])
  posterId Int
  genre Genre @relation(fields: [genreId], references: [id])

  @@id([genreId, posterId])
  @@map("genreposterrel")
}